<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- HOME -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.team.bossku.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_addItem"
            app:destination="@id/addItemFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />

        <action
            android:id="@+id/action_home_to_editItem"
            app:destination="@id/editItemFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />

        <action
            android:id="@+id/action_home_to_detail"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />

        <action android:id="@+id/action_home_to_ticket"
            app:destination="@id/ticketFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />

        <action android:id="@+id/action_home_to_history"
            app:destination="@id/historyFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />

        <action android:id="@+id/action_home_to_settings"
            app:destination="@id/settingsFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />

        <action android:id="@+id/action_home_to_addCategory"
            app:destination="@id/addCategoryFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />

        <action android:id="@+id/action_home_to_editCategory"
            app:destination="@id/editCategoryFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />

    </fragment>

    <!-- ITEM: Add  -->
    <fragment
        android:id="@+id/addItemFragment"
        android:name="com.team.bossku.ui.manage.add.AddItemFragment"
        android:label="fragment_item"
        tools:layout="@layout/fragment_base_manage_item">

        <argument
            android:name="categoryId"
            app:argType="integer"
            android:defaultValue="-1" />

    </fragment>

    <!-- ITEM: Edit -->
    <fragment
        android:id="@+id/editItemFragment"
        android:name="com.team.bossku.ui.manage.edit.EditItemFragment"
        android:label="fragment_item"
        tools:layout="@layout/fragment_base_manage_item">

        <argument
            android:name="itemId"
            app:argType="integer" />

    </fragment>

    <!-- ITEM: Detail  -->
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.team.bossku.ui.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail">

        <argument
            android:name="itemId"
            app:argType="integer" />

    </fragment>

    <!-- CATEGORY: Add -->
    <fragment
        android:id="@+id/addCategoryFragment"
        android:name="com.team.bossku.ui.manage.add.AddCategoryFragment"
        android:label="fragment_category"
        tools:layout="@layout/fragment_base_manage_category" />

    <!-- CATEGORY: Edit -->
    <fragment
        android:id="@+id/editCategoryFragment"
        android:name="com.team.bossku.ui.manage.edit.EditCategoryFragment"
        android:label="fragment_category"
        tools:layout="@layout/fragment_base_manage_category">

        <argument
            android:name="categoryId"
            app:argType="integer" />

    </fragment>

    <!-- TICKET -->
    <fragment
        android:id="@+id/ticketFragment"
        android:name="com.team.bossku.ui.ticket.TicketFragment"
        android:label="fragment_ticket"
        tools:layout="@layout/fragment_ticket">

        <argument
            android:name="ticketId"
            app:argType="integer"
            android:defaultValue="-1" />

        <action android:id="@+id/action_ticket_to_history"
            app:destination="@id/historyFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />

    </fragment>

    <!-- HISTORY -->
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.team.bossku.ui.history.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" />

    <!-- SETTINGS -->
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.team.bossku.ui.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
</navigation>
