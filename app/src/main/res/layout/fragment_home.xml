<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/items"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge" />

        </com.google.android.material.appbar.MaterialToolbar>

        <!-- Search + Sort + Cart -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/xs">

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_search"
                android:drawableTint="?attr/colorOnSurface"
                android:drawablePadding="@dimen/xs"
                android:hint="@string/search"
                android:padding="@dimen/xs" />

            <!-- Sort -->
            <ImageButton
                android:id="@+id/ibSort"
                android:layout_width="@dimen/xxxl"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/xs"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="?attr/colorOnSurface"
                android:padding="@dimen/xxs"
                android:src="@drawable/ic_sort" />

            <!-- Cart -->
            <ImageButton
                android:id="@+id/ibCart"
                android:layout_width="@dimen/xxxl"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/xxs"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="?attr/colorOnSurface"
                android:padding="@dimen/xxs"
                android:src="@drawable/ic_cart" />

        </LinearLayout>

        <!-- Content -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvItems"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/xs"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/xxxxl" />

            <LinearLayout
                android:id="@+id/llEmpty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/xl">

                <ImageView
                    android:layout_width="@dimen/xxxxl"
                    android:layout_height="@dimen/xxxxl"
                    android:layout_marginBottom="@dimen/xs"
                    app:tint="?attr/colorOnSurface"
                    android:src="@drawable/ic_question" />

                <TextView
                    android:id="@+id/tvEmpty"
                    style="@style/TextAppearance.Material3.TitleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/empty_item" />

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <!-- FAB Add -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="@dimen/xl"
        android:layout_marginBottom="@dimen/xxl"
        android:backgroundTint="@color/blue"
        android:text="@string/add_new"
        android:textColor="@color/white"
        app:icon="@drawable/ic_add"
        app:iconTint="@color/white" />

</FrameLayout>
