<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.manage.base.BaseManageCategoryFragment">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/m"
        android:paddingEnd="@dimen/m"
        android:paddingTop="@dimen/xl"
        android:paddingBottom="@dimen/s">

        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/l"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="?attr/colorOnSurface"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/xxl"
            android:paddingStart="@dimen/xl"
            android:text="@string/add_new_category"
            android:textStyle="bold"
            style="@style/TextAppearance.Material3.TitleLarge" />

    </LinearLayout>

    <!-- FORM -->
    <LinearLayout
        android:id="@+id/formContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="@dimen/l"
        android:paddingTop="@dimen/m"
        android:paddingEnd="@dimen/l">

        <!-- NAME -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tfName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m"
            android:hint="@string/name"
            android:padding="@dimen/s">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="45"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/color"
            android:layout_marginTop="@dimen/xxxxxl"
            android:paddingStart="@dimen/l"
            style="@style/TextAppearance.Material3.TitleMedium" />

        <!-- COLORS -->
        <LinearLayout
            android:id="@+id/colorContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xl"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/s">

            <View
                android:id="@+id/c1"
                android:layout_width="@dimen/xxxxxl"
                android:layout_height="@dimen/xxxxxl"
                android:background="@color/red" />

            <Space
                android:layout_width="@dimen/xxxl"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/c2"
                android:layout_width="@dimen/xxxxxl"
                android:layout_height="@dimen/xxxxxl"
                android:background="@color/orange" />

            <Space
                android:layout_width="@dimen/xxxl"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/c3"
                android:layout_width="@dimen/xxxxxl"
                android:layout_height="@dimen/xxxxxl"
                android:background="@color/yellow" />

            <Space
                android:layout_width="@dimen/xxxl"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/c4"
                android:layout_width="@dimen/xxxxxl"
                android:layout_height="@dimen/xxxxxl"
                android:background="@color/green" />

            <Space
                android:layout_width="@dimen/xxxl"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/c5"
                android:layout_width="@dimen/xxxxxl"
                android:layout_height="@dimen/xxxxxl"
                android:background="@color/blue" />

        </LinearLayout>

        <!-- Save + Delete -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xxxxl"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- SAVE -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/mbSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/save"
                android:textColor="@color/white"
                app:backgroundTint="@color/blue" />

            <Space
                android:layout_width="@dimen/m"
                android:layout_height="wrap_content" />

            <!-- DELETE -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/mbDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/delete"
                android:textColor="@color/white"
                app:backgroundTint="@color/red" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
